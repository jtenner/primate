{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "${configDir}",
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "customConditions": ["apekit"],
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "#component/*": ["components/*"],
      "#store/*": ["stores/*"]
    }
  },
  "include": [
    "${configDir}/routes",
    "${configDir}/stores",
    "${configDir}/test",
    "${configDir}/primate.config.js",
    "${configDir}/primate.config.ts"
  ],
  "exclude": ["node_modules"]
}
