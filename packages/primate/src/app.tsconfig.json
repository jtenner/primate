{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "${configDir}",
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "customConditions": ["apekit"],
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "#route/*": ["routes/*"],
      "#component/*": ["components/*", "components/*.svelte"],
      "#store/*": ["stores/*"],
      "#module/*": ["modules/*"],
      "#config/*": ["config/*"],
      "#static/*": ["static/*", "static/*.ts"],
      "#app": ["config/app.ts", "config/app.js"],
      "#session": ["config/session.ts", "config/session.js"],
      "#database": ["config/database.ts", "config/database.js"]
    }
  },
  "include": [
    "${configDir}/config",
    "${configDir}/routes",
    "${configDir}/components",
    "${configDir}/stores",
    "${configDir}/modules",
    "${configDir}/test",
    "${configDir}/static",
    "${configDir}/primate.config.js",
    "${configDir}/primate.config.ts"
  ],
  "exclude": ["node_modules"]
}
